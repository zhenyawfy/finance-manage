<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.UserMapper">
    <resultMap id="baseResultMap" type="com.demo.dao.User">
        <id column="FU_ID" property="id"></id>
        <result property="loginName" column="FU_LOGIN_NAME" />
        <result property="name" column="FU_NAME" />
        <result property="sex" column="FU_SEX" />
        <result property="pwd" column="FU_PWD" />
        <result property="email" column="FU_EMAIL" />
        <result property="address" column="FU_ADDRESS" />
        <result property="mobile" column="FU_MOBILE" />
        <result property="createTime" column="FU_CREATE_TIME" />
        <result property="updateTime" column="FU_UPDATE_TIME" />
    </resultMap>
    <insert id="addUser" parameterType="com.demo.dao.User">
        INSERT INTO FM_USER(`FU_ID`, `FU_LOGIN_NAME`, `FU_NAME`, `FU_SEX`, `FU_PWD`, `FU_EMAIL`, `FU_ADDRESS`, `FU_MOBILE`, `FU_CREATE_TIME`, `FU_UPDATE_TIME`)
        VALUES (#{id},#{loginName},#{name},#{sex},#{pwd},#{email},#{address},#{mobile},#{createTime},#{updateTime})
    </insert>
    <select id="findByLoginName" resultMap="baseResultMap" resultType="com.demo.dao.User">
        SELECT FU_ID,FU_LOGIN_NAME,FU_NAME,FU_PWD,FU_SEX,FU_EMAIL,FU_ADDRESS,FU_MOBILE FROM FM_USER WHERE FU_LOGIN_NAME = #{loginName}
    </select>
</mapper>